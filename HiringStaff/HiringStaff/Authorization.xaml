<Window x:Class="HiringStaff.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HiringStaff"
        mc:Ignorable="d"
        Title="HiringStaff" Height="210" Width="400" Closing="Window_Closing">
    <Grid> 
        <Grid>
            <Rectangle VerticalAlignment="Top" Width="400" Height="40" Fill="Black"/>
            <Label Content="Авторизация" HorizontalAlignment="Center" FontSize="20" Foreground="Yellow"/>
        </Grid>
        <Grid Margin="10,50,10,10" HorizontalAlignment="Center">
            <StackPanel>
                <Grid Margin="0,0,0,10">
                    <Label Content="Логин" FontSize="14"/>
                    <TextBox x:Name="Login" Text="iva" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="80,0,0,0" FontSize="14" Width="250"/>
                </Grid>
                <Grid Margin="0,0,0,10">
                    <Label Content="Пароль" FontSize="14"/>
                    <TextBox x:Name="Password" Text="iva" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="80,0,0,0" FontSize="14" Width="250"/>
                </Grid>
                <Button x:Name="Enter" Content="Войти" Width="330" FontSize="14" Click="Enter_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
